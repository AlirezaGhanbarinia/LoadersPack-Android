<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="circleDrawOnlystroke" format="boolean" />
        <attr name="circleStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ArcView">
        <attr name="arcRadius" format="dimension" />
        <attr name="arcWidth" format="dimension" />
        <attr name="startAngle" format="float" />
        <attr name="sweepAngle" format="float" />
        <attr name="arcColor" format="color" />
        <attr name="drawOnlyStroke" format="boolean" />
    </declare-styleable>


    <declare-styleable name="CircularSticksBaseView">
        <attr name="sticksbase_noOfSticks" format="integer" />
        <attr name="sticksbase_outerCircleRadius" format="dimension" />
        <attr name="sticksbase_innerCircleRadius" format="dimension" />
        <attr name="sticksbase_stickColor" format="color" />
        <attr name="sticksbase_viewBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ClockLoader">
        <attr name="clock_outerCircleBorderWidth" format="dimension" />
        <attr name="clock_bigCircleRadius" format="dimension" />
        <attr name="clock_innerCircleRadius" format="dimension" />
        <attr name="clock_hourHandLength" format="dimension" />
        <attr name="clock_minuteHandLength" format="dimension" />

        <attr name="clock_outerCircleBorderColor" format="color" />
        <attr name="clock_bigCircleColor" format="color" />
        <attr name="clock_innerCircleColor" format="color" />
        <attr name="clock_hourHandColor" format="color" />
        <attr name="clock_minuteHandColor" format="color" />

        <attr name="clock_animSpeedMultiplier" format="float" />
    </declare-styleable>

    <declare-styleable name="RippleLoader">
        <attr name="ripple_circleInitialRadius" format="dimension" />
        <attr name="ripple_circleColor" format="color" />
        <attr name="ripple_fromAlpha" format="float" />
        <attr name="ripple_toAplha" format="float" />
        <attr name="ripple_animDuration" format="integer" />
        <attr name="ripple_interpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="MultipleRippleLoader">
        <attr name="multipleripple_circleInitialRadius" format="dimension" />
        <attr name="multipleripple_circleColor" format="color" />

        <attr name="multipleripple_noOfRipples" format="integer" />

        <attr name="multipleripple_fromAlpha" format="float" />
        <attr name="multipleripple_toAplha" format="float" />
        <attr name="multipleripple_animDuration" format="integer" />
        <attr name="multipleripple_interpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotatingCircularSticksLoader">
        <attr name="rotatingsticks_noOfSticks" format="integer" />
        <attr name="rotatingsticks_outerCircleRadius" format="dimension" />
        <attr name="rotatingsticks_innerCircleRadius" format="dimension" />
        <attr name="rotatingsticks_stickColor" format="color" />
        <attr name="rotatingsticks_viewBackgroundColor" format="color" />
        <attr name="rotatingsticks_animDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircularSticksLoader">
        <attr name="circularsticks_noOfSticks" format="integer" />
        <attr name="circularsticks_outerCircleRadius" format="dimension" />
        <attr name="circularsticks_innerCircleRadius" format="dimension" />

        <attr name="circularsticks_stickColor" format="color" />
        <attr name="circularsticks_selectedStickColor" format="color" />
        <attr name="circularsticks_viewBackgroundColor" format="color" />


        <attr name="circularsticks_showRunningShadow" format="boolean" />
        <attr name="circularsticks_firstShadowColor" format="color" />
        <attr name="circularsticks_secondShadowColor" format="color" />

        <attr name="circularsticks_animDuration" format="integer" />
    </declare-styleable>

</resources>